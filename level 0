    <script>
         var str = 'today is a happy day';
         var i=0,j=0;
        console.log(str);
        var flag = str.split(" ");
        function change(flag) {
              for(i=0;i<flag.length;i++)
            {
               var letter = flag[i].split("");
               for(j=0;j<letter.length;j++)
              {
                 letter[0] = letter[0].toUpperCase(); 
              }
              flag[i] = letter.join("");   
            }
          flag = flag.join(" ");   
          console.log(flag);    
        }
        change(flag);
    </script>
