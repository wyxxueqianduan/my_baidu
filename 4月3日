        <button class="theme">主题变化</button>

        <div class="font-change">
            <p>字体变化</p>
            <button class="font-larger">大</button>
            <button class="font-default">还原默认</button>
            <button class="font-smaller">小</button>
        </div>
    </div>
    <script>
        let body = document.querySelector('body');
        let theme = document.querySelector(".theme");
        let larger = document.querySelector(".font-larger");
        let normal = document.querySelector(".font-default");
        let smaller = document.querySelector(".font-smaller");
        var n = 0;
        theme.onclick = function() {
            if(n===0) {
                body.style.backgroundColor = "pink";
                n=1;
            }
                else {
                    body.style.backgroundColor = "white";
                    n=0;
                }
        }
        larger.addEventListener("click",fun=()=>{
                body.style.fontSize = "25px";
        })
        normal.addEventListener("click",fun=()=>{
                body.style.fontSize = "14px";
        })
        smaller.addEventListener("click",fun=()=>{
                body.style.fontSize = "6px";
        })
    </script>

    </body>
3.level3
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        li {
            color: white;
            width: 1000px;
            height: 50px;
        }
    </style>
</head>
<body>
    <ul>
        <li>1</li>
        <li>2</li>
        <li>3</li>
        <li>4</li>
        <li>5</li>
        <li>6</li>
        <li>7</li>
        <li>8</li>
        <li>9</li>
        <li>10</li>
    </ul>
    <script>
        let list = document.querySelectorAll("li");
        let ul = document.querySelector("ul");
        list.forEach((item,i)=>{
                if (i % 2 === 0) {
                    list[i].style.backgroundColor = 'rgb(197, 32, 11)'
                }
                else {
                    list[i].style.backgroundColor = "green";
                }
            })
       ul.addEventListener("click",function(e){
        console.log(e.target);
        alert(e.toElement.outerText);
       })
    </script>
</body>
4.level4
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <textarea name="" id="" cols="80" rows="10"></textarea>
    <button class="post">点击发布</button>
    <div class="list">
    </div>
    <script>
       let post = document.querySelector(".post");
       let textarea = document.querySelector("textarea");
       let div =  document.querySelector("div");
       post.onclick = function () {
           let value = textarea.value;
           let p = document.createElement("p");
           let text = document.createTextNode(value);
           div.appendChild(p);
           p.appendChild(text);
       }

    </script>
</body>
</html>
