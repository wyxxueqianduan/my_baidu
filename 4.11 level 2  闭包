    <script>
        for (var i = 0; i < 5; i++) {
            setTimeout(function () {
                console.log(new Date, i--);
            }, 1000);
        }
        console.log(new Date, i--);
    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <script>
        var out = function (i) {
            setTimeout(() => console.log(i), 1000 * i)
        }
        for (var i = 0; i < 5; i++) {
            out(i);
        }
    </script>
</body>

</html>
